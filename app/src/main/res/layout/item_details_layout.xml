<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/item_icon"
        android:layout_width="100dp"
        android:layout_height="81dp"
        android:id="@+id/imageView"
        android:maxWidth="2dp"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/lblItemDisplayName"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/lblItemDisplayCategory"
        android:layout_below="@+id/lblItemDisplayName"
        android:layout_toEndOf="@+id/imageView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/lblItemDisplayUnits"
        android:layout_below="@+id/lblItemDisplayCategory"
        android:layout_toEndOf="@+id/imageView"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete Purchase"
        android:id="@+id/btnCompletePurchase"
        android:layout_below="@+id/lblItemDisplayUnits"
        android:layout_toEndOf="@+id/imageView" />
</RelativeLayout>